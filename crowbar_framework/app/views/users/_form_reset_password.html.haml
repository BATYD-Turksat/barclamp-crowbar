= form_for(user,  :url => { :action => :reset_password } ) do |ff|
 %ul
  - user.errors.full_messages.each do |er|
   %li=er
 = ff.text_field :id, :type => "hidden"
 %table.center
  %tr
   %td= ff.label :username
   %td= ff.label :password
   %td= ff.label :password_confirmation
   %td &nbsp;
  %tr
   %td= user.username
   %td= ff.password_field :password
   %td= ff.password_field :password_confirmation
   %td= ff.submit t("user.set_password"), :class=>'button'
